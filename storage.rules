rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAdmin() {
      return request.auth != null && 
             firestore.exists(/databases/(default)/documents/config/adminEmails) &&
             request.auth.token.email in 
             firestore.get(/databases/(default)/documents/config/adminEmails).data.emails;
    }

    // Furniture images: public read for catalog; writes restricted to admins
    match /furniture/{allPaths=**} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }

    // Project images: public read for gallery; writes restricted to admins
    match /projects/{allPaths=**} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }

    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}