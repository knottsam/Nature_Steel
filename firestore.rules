rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/config/adminEmails) &&
             request.auth.token.email in 
             get(/databases/$(database)/documents/config/adminEmails).data.emails;
    }

    function isValidFurniture() {
      return request.resource.data.keys().hasOnly([
        'name', 'description', 'price', 'images', 'materials', 'material', 'itemType', 'coverImage',
        'customizable', 'published', 'galleryFeatured', 'stock', 'created', 'updated', 'slug', 'imageUrl',
        'availableMaterials', 'deliveryCost'
      ])
      && request.resource.data.name is string
      && request.resource.data.description is string
      && request.resource.data.materials is string
      && request.resource.data.price is int
      && request.resource.data.price >= 0
      && (!('deliveryCost' in request.resource.data) || (request.resource.data.deliveryCost is int && request.resource.data.deliveryCost >= 0))
      && (!('material' in request.resource.data) || request.resource.data.material is string)
      && (!('itemType' in request.resource.data) || request.resource.data.itemType is string)
      && (!('coverImage' in request.resource.data) || request.resource.data.coverImage is string)
      && (!('slug' in request.resource.data) || request.resource.data.slug is string)
      && (!('imageUrl' in request.resource.data) || request.resource.data.imageUrl is string)
      && (!('stock' in request.resource.data) || request.resource.data.stock is int)
      && (!('customizable' in request.resource.data) || request.resource.data.customizable is bool)
      && (!('published' in request.resource.data) || request.resource.data.published is bool)
      && (!('galleryFeatured' in request.resource.data) || request.resource.data.galleryFeatured is bool)
      && (!('availableMaterials' in request.resource.data) || request.resource.data.availableMaterials is string)
      && (!('images' in request.resource.data) || request.resource.data.images is list)
      && (!('created' in request.resource.data) || request.resource.data.created is timestamp)
      && (!('updated' in request.resource.data) || request.resource.data.updated is timestamp);
    }

    // Allow admin config initialization (temporary - remove after setup)
    match /config/adminEmails {
      allow read, write: if request.auth != null;
    }

    match /furniture/{docId} {
      allow read: if (resource != null && resource.data.published == true) || isAdmin();
      allow create, update: if isAdmin() && isValidFurniture();
      allow delete: if isAdmin();
    }

    match /orders/{docId} {
      // Orders are written by the backend (Admin SDK) and read only by admins
      // Allow admin deletion for cleanup of old pending orders
      allow read: if isAdmin();
      allow create, update: if false;
      allow delete: if isAdmin();
    }

    match /settings/siteVisibility {
      allow read: if true;
      allow write: if isAdmin();
    }

    function isValidProject() {
      return request.resource.data.keys().hasOnly([
        'title', 'images', 'mainImage', 'created', 'updated'
      ])
      && request.resource.data.title is string
      && request.resource.data.images is list
      && request.resource.data.mainImage is string
      && (!('updated' in request.resource.data) || request.resource.data.updated is timestamp);
    }

    match /projects/{docId} {
      allow read: if true; // Projects are public
      allow create, update: if isAdmin() && isValidProject();
      allow delete: if isAdmin();
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}